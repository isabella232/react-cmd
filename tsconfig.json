{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2016",
        "outDir": "dist",
        "lib": [
            "ES2020", "DOM"
        ],
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": [
        "node_modules"
    ]
}
